doctype html
html
  head
    title trope
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    link(rel="stylesheet" href="https://indestructibletype.com/fonts/Jost.css" type="text/css" charset="utf-8")
  body(style="font-family: 'Jost', helvetica, arial, 'hiragino kaku gothic pro', meiryo, 'ms pgothic', sans-serif").container
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.my-3
      div.navbar-header.mr-auto
        a(href="/").navbar-brand.nav-link 
          span(style="font-weight: bold") Trope
      div.navbar-right  
        form.form-inline.navbar-nav
          input.form-control.mr-sm-2(type="search" placeholder="検索キーワード" aria-label="検索キーワード")
          button.btn.btn-outline-success.my-2.my-sm-0(type="submit") 検索
      ul.navbar-nav
        if user
          li.nav-item
            a(href=`/${user.username}`).nav-link.btn.btn-outline-success.mx-2 #{user.username}でログイン中
          li.nav-item
            a(href="/logout").nav-link.btn.btn-outline-success.mx-2 ログアウト
        else
          li.nav-item
            a(href="/login").nav-link.btn-outline-success ログイン
    div.container
      block content
    script(src="/javascripts/bundle.js")
